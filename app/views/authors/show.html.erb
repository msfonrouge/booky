<div id="<%= dom_id @author %>">
<h1><%= "#{@author.first_name} #{@author.last_name}" %></h1>
<div class="d-flex flex-wrap gap-3 my-5">
<% @author.books.each do |book| %>
    <div class="text-center" style="width: 200px;">
    <i class="fa-solid fa-book-open fs-1 text-center pb-3"></i>
      <h5><strong><%= link_to book.title, book_path(book), class: "text-decoration-none" %></strong></h5>
      </div>
    <% end %>
</div>
</div>
<div>
  <%= link_to "Edit this author", edit_author_path(@author) %> |
  <%= link_to "Back to authors", authors_path %>
</div>
